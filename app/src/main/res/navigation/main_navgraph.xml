<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navgraph"
    app:startDestination="@id/berandaFragment">

    <fragment
        android:id="@+id/berandaFragment"
        android:name="com.kedirilagi.astro.data.view.fragment.bottomnav.BerandaFragment"
        android:label="fragment_beranda"
        tools:layout="@layout/fragment_beranda">
        <action
            android:id="@+id/action_berandaFragment_to_statusAmanFragment"
            app:destination="@id/statusAmanFragment" />
        <action
            android:id="@+id/action_berandaFragment_to_statusBahayaFragment"
            app:destination="@id/statusBahayaFragment" />
    </fragment>
    <fragment
        android:id="@+id/jadwalFragment"
        android:name="com.kedirilagi.astro.data.view.fragment.bottomnav.JadwalFragment"
        android:label="fragment_jadwal"
        tools:layout="@layout/fragment_jadwal" />
    <fragment
        android:id="@+id/petunjukFragment"
        android:name="com.kedirilagi.astro.data.view.fragment.bottomnav.PetunjukFragment"
        android:label="fragment_petunjuk"
        tools:layout="@layout/fragment_petunjuk" />
    <fragment
        android:id="@+id/profilFragment"
        android:name="com.kedirilagi.astro.data.view.fragment.bottomnav.ProfilFragment"
        android:label="fragment_profil"
        tools:layout="@layout/fragment_profil" />
    <fragment
        android:id="@+id/statusAmanFragment"
        android:name="com.kedirilagi.astro.data.view.fragment.StatusAmanFragment"
        android:label="StatusAmanFragment" />
    <fragment
        android:id="@+id/statusBahayaFragment"
        android:name="com.kedirilagi.astro.data.view.fragment.StatusBahayaFragment"
        android:label="fragment_status_bahaya"
        tools:layout="@layout/fragment_status_bahaya" />
</navigation>