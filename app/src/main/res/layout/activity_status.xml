<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.view.activity.StatusActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tvBack"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/layoutSafe"
        layout="@layout/layout_status_detail_aman" />

    <include
        android:id="@+id/layoutEmergeny"
        layout="@layout/layout_status_detail_bahaya"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>